{% extends 'base.html.twig' %}

{% block title %}
	{{ controller_name }}
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="container text-center">
			<div class="jumbotron mt-5">
				<h1>{{ controller_name }}!</h1>
			</div>
			<p class="lead">
				Voici la liste de tous nos articles
			</p>


			{% for article in articles %}
				<div class="un-article jumbotron p-0 row">

					<img src="{{ article.image }}" alt="image article" class="image-preview col-3 p-0" width="285" height="250">

					<div class="text-center p-5 d-flex flex-column col-9 justify-content-between">
						<h3 class="mb-3">
							{{ article.title }}
						</h3>

						<p class="mb-3">
							{{ article.introduction }}
						</p>

						<p class="mb-3">
							{{ article.price }}
							â‚¬ !
						</p>
						<div class="row">
							<a href="{{ path('fiche_produit', {'id': article.id }) }}" class="btn w-25 mx-auto btn-primary active" role="button">En savoir plus ?</a>
							<a href="{{ path('cart_add', {'id': article.id }) }}" class="btn w-25 mx-auto btn-success active" role="button">
								<i class="fas fa-cart-plus"></i>
							</a>
						</div>
					</div>

				</div>

			{% endfor %}


		</div>
	</div>

{% endblock %}
